*,
:before,
:after {
  box-sizing: border-box;
}

:root {
  --black: #131313;
  --dark-gray: #d4d4d4;
  --gray: #efefe6;
  --light-gray: #e5e5e5;
  --brick: #a2543d;
  --red: #c44318;
  --fs-sm: 0.875rem;
  --fs-base: 1rem;
  --fs-lg: 1.125rem;
  --fs-xl: 1.25rem;
  --fs-title: 1.5rem;
  --fs-2xl: 1.75rem;
  --fs-3xl: 2rem;
  --fs-4xl: 2.5rem;
  --fs-5xl: 3rem;
  --fs-6xl: 3.5rem;
}

html,
body {
  margin:  0 ;
  padding : 0 ;
  font-family: "Inter", sans-serif;
}
body {
  background-color: var(--gray);
}

/*  header */

header .logo {
font-weight: 700;
color: var(--black);
font-size: var(--fs-2xl);
}
header .logo:focus, header .logo:hover {
  color: var(--brick);

}

header,
nav ul {
  list-style: none;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  column-gap: 20px;
  row-gap: 10px;
}
header {
  padding: 1rem;
}
nav a {
  text-decoration: none;
  color: var(--black);
}
nav a:hover,
nav a:focus {
  text-decoration: underline;
  text-underline-offset: 4px;
}
.active {
  font-weight: 600;
  color: var(--brick);
}

/*  footer */


footer {
  padding: 1.5rem 0.5rem;
  text-align: center;
  border-top: 1px solid var(--dark-gray);
  font-size: var(--fs-lg);
}

footer  a {
  font-weight: 600;
  color: var(--brick);
}
